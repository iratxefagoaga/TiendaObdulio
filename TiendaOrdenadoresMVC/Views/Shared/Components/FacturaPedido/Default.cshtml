@model MVC_ComponentesCodeFirst.Models.Factura
<h3>@Model.Descripcion</h3>
<dl class="row" style="width:30%; border:3px solid;">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Fecha)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Fecha)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Precio)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Precio)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Calor)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Calor)
    </dd>
</dl>
<h1>Lista de pedidos</h1>
    <table class="table">
        <thead>
        <tr>
            <th>
                Descripcion
            </th>
            <th>
                Calor
            </th>
            <th>
                Precio
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>


        @{
            System.Diagnostics.Debug.Assert(Model.Pedidos != null, "Model.Pedidos != null");
        }
        @foreach (var pedido in Model.Pedidos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => pedido.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pedido.Calor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pedido.Precio)
                </td>

                <td>
                    <a asp-controller="Pedidos" asp-action="Edit" asp-route-id="@pedido.Id" title="Editar"> <img src="~/images/editar.png" height="20px" /></a> |
                    <a asp-controller="Pedidos" asp-action="Details" asp-route-id="@pedido.Id" title="Detalles"><img src="~/images/detalles.png" height="20px" /></a> |
                    <a asp-controller="Pedidos" asp-action="Delete" asp-route-id="@pedido.Id" title="Eliminar"><img src="~/images/eliminar.png" height="20px" /></a>
                </td>
            </tr>
        }
        </tbody>
    </table>