@using Ejercicio_ordenadores.Builders.Componentes
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MVC_ComponentesCodeFirst.Models.Componente

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Componente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TipoComponente" class="control-label"></label>
                <select asp-for="TipoComponente" asp-items="Html.GetEnumSelectList<EnumTipoComponentes>()">
                    <option selected="selected" value="">Elige tipo componente</option>
                </select>
                <span asp-validation-for="TipoComponente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serie" class="control-label"></label>
                <input asp-for="Serie" class="form-control" />
                <span asp-validation-for="Serie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calor" class="control-label"></label>
                <input asp-for="Calor" class="form-control" />
                <span asp-validation-for="Calor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Megas" class="control-label"></label>
                <input asp-for="Megas" class="form-control" />
                <span asp-validation-for="Megas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cores" class="control-label"></label>
                <input asp-for="Cores" class="form-control" />
                <span asp-validation-for="Cores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ordenador" class="control-label"></label>
                <select asp-for="OrdenadorId" class="form-control" asp-items="ViewBag.OrdenadorId"></select>
                <span asp-validation-for="OrdenadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="javascript:void(0);" onclick="history.go(-1);" title="Volver"><img src="~/images/go-back-arrow.svg" height="20px" /></a>
                <button type="submit" class="imageButton" title="Guardar"><img src="~/images/guardar.png" height="20px" /></button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
