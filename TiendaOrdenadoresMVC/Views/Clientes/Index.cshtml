@model IEnumerable<MVC_ComponentesCodeFirst.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<p>
    <a class="my-class" asp-action="Create">Crear un cliente nuevo</a>
    <div class="actions">
        <a href="javascript:(function(){document.tableForm.submit();return void(0);})()" title="Eliminar todos los clientes seleccionados">
            <img src="~/images/eliminar.png" height="20px" />
        </a>
    </div>
</p>
@{
    Html.BeginForm("BatchDelete", "Clientes", FormMethod.Post, new { name = "tableForm" });
}
<table class="table">
    <thead>
    <tr>
        <th>
            Seleccionar
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            <input type="checkbox" name="deleteInputs" value="@item.Id"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a asp-action="Details" asp-route-id="@item.Id" title="Detalles"><img src="~/images/detalles.png" height="20px"/></a> |
            <a asp-action="Delete" asp-route-id="@item.Id" title="Eliminar"><img src="~/images/eliminar.png" height="20px"/></a>
        </td>
    </tr>
}
    </tbody>
</table>
@{
    Html.EndForm();
}
